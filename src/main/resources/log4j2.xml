<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="opde" packages="">
    <!-- Logging Properties -->
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%t] %p %m%n</Property>
        <Property name="APP_LOG_ROOT">${sys:workspace}/logs</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingFile
                name="RollingFile"
                fileName="${APP_LOG_ROOT}/opde.log"
                filePattern="${APP_LOG_ROOT}/opde.%d{dd-MMM}.log.gz"
                ignoreExceptions="false">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <!--            Rolling over every day-->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

    </Appenders>
    <Loggers>
        <Root level="${sys:loglevel:-INFO}">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
